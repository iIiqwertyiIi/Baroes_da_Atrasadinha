<h1><%= @movie.name %></h1>

<p><%= @movie.director %></p>
<p><%= @movie.score %></p>
<p><%= @movie.date %></p>
<% @genres.each do |genre| %>
  <% @movie.genre_id.each do |id| %>
    <% if id == genre.id %>
      <p><%= link_to genre.name, genre_path(genre) %></p>
    <% end %>
  <% end %>
<% end %>
<p><%= @movie.description %></p>
<iframe><%= @movie.trailer %></iframe>

<% @reviews.each do |review| %>
  <% if review.user_id == current_user.id %>
    <%= link_to 'Escreva sua Review', new_review_path %>
  <% end %>
<% end %>


<% @reviews.each do |review| %>
  <% if review.review != nil %>
    <% @users.each do |user| %>
      <% if review.user_id == user.id %>
        <div>
          <%= user.name %>
        </div>
      <% end %>
    <% end %>
    <div>
      <%= review.score %>
    </div>
    <div>
      <%= review.review %>
    </div>
  <% end %>
  <% if review.user_id == current_user.id %>
    <div>
      <%= link_to 'Editar review', edit_review_path(review) %>
    </div>
  <% end %>
<% end %>