<div class="index-movies">
  <% if is_admin? == true %>
    <%= link_to 'Adicionar filme', new_movie_path %>
  <% end %>
  <p><%= link_to 'Melhores filmes aqui', surto_path %></p>
<% i = 0 %>
  <% while i < @movies.count %>
    <h4><%= @movies[i].name %></h4>
    <% if @movies[i].photo.attached? %>
      <%= image_tag @movies[i].photo, :class => "poster-size" %>
    <% else %>
      <img src="https://images-na.ssl-images-amazon.com/images/I/518ms9uDxuL._AC_SL1025_.jpg " width="200px" height="200px">
    <% end %>
    <h6>Nota:</h6><p><%= @notinhas[i] %></p>
    <%= link_to 'Mostrar mais', movie_path(i + 1) %>
    <hr class="linha-divisao">
    <% i += 1 %>
  <% end %>
</div>

<div class="demo">
  <nav class="pagination-outer" aria-label="Page navigation">
    <ul class="pagination">
      <%== pagy_bootstrap_nav(@pagy) %>
    </ul>
  </nav>
</div>
