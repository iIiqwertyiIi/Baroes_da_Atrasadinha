<% if is_admin? == true %>
  <h2> Editar filme </h2>

  <%= form_with model: @movie do |filme| %>
    <%= filme.file_field :photo %>
    <p>Nome: <%= filme.text_field :name %><p>
    <p>Data: <%= filme.date_field :date %><p>
    <%= filme.collection_check_boxes :genre_ids, @genres, :id, :name, required: true %>
    <p>Dirigido por: <%= filme.text_field :director %><p>
    <p>Sinopse: <%= filme.text_area :description %><p>
    <p>Trailer: <%= filme.text_field :trailer %><p>

  <%= filme.submit %>
  <% end %>
<% end %>