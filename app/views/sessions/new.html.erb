<h1>Entrar</h1>
<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag 'email:' %>
    <%= email_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag 'senha:' %>
    <%= password_field_tag :password %>
  </div>
  <div class="field">
    <%= check_box_tag :remember_me, 1, params[:remember_me] %>
    <%= label_tag 'lembrar de mim.'%>
  </div>
  <div class="actions"><%= submit_tag 'login' %></div>
<% end %>